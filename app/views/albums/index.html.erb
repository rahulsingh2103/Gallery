<% var = current_user.admin %>
<% if var == true %>



<div class="container-fluid ">
    <div class="row ">
        <div class="col-8 ">
            <p class="font-weight-bolder h1 pt-2 ml-3"><u>All Rcord</u></p>
        </div>
        <div class="col-4">
            <div class="row mt-3 ml-3">
               <%= link_to 'Upload', new_album_path, class: "btn btn-sm btn-secondary text-white h1 mr-1 " %>
                <%= search_form_for @search_admin do |f| %>
                <%= f.text_field :title_or_tag_or_discription_cont, class: " rounded "%>
                <%= f.submit "Search", class: "rounded btn-secondary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>


<%= search_form_for @search_admin do |f| %>

<div class="container-fluid pt-3 ">
    <table class="table table-striped table-ed">
        <thead class="thead-dark border">
            <tr class=" border">
                <th class=" border">User </th>
                <th class=" border">Title 
                </th>
                <th class=" border">Description</th>
                <th class=" border">Tags </th>
                <th class=" border">Created On </th>
                <th class=" border">Updated On </th>
                <th class="text-center border">Show Album</th>
                <th class="text-center border">Edit Album</th>
                <th class="text-center border">Destroy Album</th>
            </tr>
        </thead>

        <tbody>
            <% @albums.each do |album| %>
            <tr>
                <td class="h6"><%= album.user.email %></td>
                <td class="h6"><%= album.title %></td>
                <td class="h6"><%= album.discription %></td>
                <td class="h6"><%= album.tag %> </td>
                <td class="h6"><%= album.created_at.to_s.split(' ')[0] %></td>
                <td class="h6"> <%= album.updated_at.to_s.split(' ')[0] %></td>
                <td class="h6 text-center"><%= link_to 'Show', album, class:"btn btn-sm btn-secondary text-white " %></td>
                <td class="h6 text-center"><%= link_to 'Edit', edit_album_path(album), class:"btn btn-sm btn-secondary text-white " %></td>
                <td class="h6 text-center"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-secondary text-white " %></td>

            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<% end %>

<%= paginate @albums%>
<br>
















